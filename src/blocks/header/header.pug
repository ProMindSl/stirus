mixin header(modifier)
  .header&attributes(attributes)
    .container-fluid
      .row
        .col-12
          .header__content
            +logo(class="ml-15")
            nav.header__sitemap
              a.header__link(href="#") Главная
              a.header__link(href="#") Новости
              a.header__link(href="#") Галерея
              a.header__link(href="#") Контакты
            a.btn(href="#").mr-15 О компании
