mixin item(title, dscr, date, href, src, modifier)
  a.item(href=href)&attributes(attributes)
    .item__picture(style="background-image: url(../img/item.jpg);")
      img(src=src align=bottom)
    .item__content
      .item__content-top
        h3.item__title= title
        p.item__dscr= dscr
      .item__date= date